<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/snack_with_custom_action"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:text="Snackbar with custom Action"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/snack_with_color"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:text="Snackbar with custom  color"
            android:textAllCaps="false"/>


        <Button
            android:id="@+id/snack_with_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Snackbar with custom  font"
            android:textAllCaps="false"/>


        <Button
            android:id="@+id/snack_with_icon"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Snackbar with icon"
            android:textAllCaps="false"/>


    </LinearLayout>

</ScrollView>
